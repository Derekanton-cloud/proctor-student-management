<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #FFDAB9;
            margin: 0;
            padding: 20px;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(139, 0, 0, 0.1);
        }
        
        h1 {
            color: #800000;
            margin-bottom: 20px;
        }
        
        .subject-selector {
            margin-bottom: 20px;
        }
        
        select {
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }
        
        .chat-container {
            height: 500px;
            border: 1px solid #FFDAB9;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 15px;
            background-color: #FFFAF0;
        }
        
        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 8px;
            max-width: 80%;
            word-wrap: break-word;
        }
        
        .user-message {
            background-color: #800000;
            color: white;
            margin-left: auto;
        }
        
        .ai-message {
            background-color: #FFE4B5;
            color: #800000;
            margin-right: auto;
        }
        
        .chat-input {
            display: flex;
            padding: 10px;
            background-color: white;
            border-top: 1px solid #FFDAB9;
        }
        
        .chat-input input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-right: 10px;
        }
        
        .chat-input button {
            background-color: #800000;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .nav-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        
        .back-btn {
            background-color: #800000;
            color: white;
            padding: 8px 15px;
            border-radius: 4px;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="nav-bar">
            <a href="/student/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
            <h1>AI Study Assistant</h1>
        </div>
        
        <div class="subject-selector">
            <label for="subject">Select Subject: </label>
            <select id="subject" name="subject">
                <option value="general">General Questions</option>
                <option value="mathematics">Mathematics</option>
                <option value="physics">Physics</option>
                <option value="chemistry">Chemistry</option>
                <option value="biology">Biology</option>
                <option value="computer science">Computer Science</option>
                <option value="history">History</option>
                <option value="literature">Literature</option>
            </select>
        </div>
        
        <div class="chat-container">
            <div class="chat-messages" id="chat-messages">
                <div class="message ai-message">
                    Hello <%= user.name %>! I'm your AI study assistant. How can I help you today?
                </div>
            </div>
            
            <div class="chat-input">
                <input 
                    type="text" 
                    id="user-input" 
                    placeholder="Type your question here..."
                    autocomplete="off"
                >
                <button id="send-btn">Send</button>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chatMessages = document.getElementById('chat-messages');
            const userInput = document.getElementById('user-input');
            const sendBtn = document.getElementById('send-btn');
            const subjectSelect = document.getElementById('subject');
            
            sendBtn.addEventListener('click', sendMessage);
            userInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });
            
            function sendMessage() {
                const question = userInput.value.trim();
                if (!question) return;
                
                // Add user message to chat
                appendMessage(question, 'user-message');
                userInput.value = '';
                
                // Add loading indicator
                const loadingId = 'loading-' + Date.now();
                appendMessage('Thinking...', 'ai-message', loadingId);
                
                // Get selected subject
                const subject = subjectSelect.value;
                
                // Send request to server
                fetch('/ai/student/assistant/ask', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ question, subject })
                })
                .then(response => response.json())
                .then(data => {
                    // Remove loading message
                    const loadingMsg = document.getElementById(loadingId);
                    if (loadingMsg) loadingMsg.remove();
                    
                    // Add AI response
                    if (data.answer) {
                        appendMessage(data.answer, 'ai-message');
                    } else if (data.error) {
                        appendMessage('Sorry, I encountered an error: ' + data.error, 'ai-message');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    const loadingMsg = document.getElementById(loadingId);
                    if (loadingMsg) loadingMsg.remove();
                    appendMessage('Sorry, there was an error processing your request.', 'ai-message');
                });
            }
            
            function appendMessage(text, className, id = null) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${className}`;
                if (id) messageDiv.id = id;
                messageDiv.textContent = text;
                
                chatMessages.appendChild(messageDiv);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
        });
    </script>
</body>
</html>